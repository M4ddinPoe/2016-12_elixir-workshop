<h1><%= @page.title %></h1>

<p>
    <%= @page.body %>
</p>

<div>
    <p>
        <%= link "Home", to: "/", class: "btn btn-default" %> 
        <%= link "Edit", to: page_path(@conn, :edit, @page.title), class: "btn btn-default" %> 
        <%= link "Delete", to: page_path(@conn, :delete, @page.title), method: :delete, class: "btn btn-danger" %>
    </p>
</div>